{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "module": "ESNext",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": false,
    "sourceMap": true,
    "downlevelIteration": true,
    "lib": ["es2016", "DOM"],
    "outDir": "./lib"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./lib"]
}
